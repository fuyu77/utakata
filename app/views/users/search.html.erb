<% @title = "「#{@search}」で歌人を検索" %>

<div class = "vertical serif tanka-index nowrap mt-3">
  <ul class="nav nav-tabs vertical-tab">
    <li class="nav-item">
      <%= link_to '短歌', search_posts_path(search: @search), method: :get, class: 'nav-link vertical-tab text-secondary' %>
    </li>
    <li class="nav-item">
      <%= link_to '自分の短歌', my_search_posts_path(search: @search), method: :get, class: 'nav-link vertical-tab text-secondary' %>
    </li>
    <li class="nav-item">
      <a class="nav-link active vertical-tab">歌人</a>
    </li>
  </ul>
  <%= paginate @users %>
  <% @users.each do |user| %>
    <p>
      <%= link_to (image_tag user.avatar.url(:medium), class: 'rounded'), user_path(id: user.id), method: :get, class: 'tanka-link' %>&nbsp;
      <%= link_to user.name, user_path(id: user.id), method: :get, class: 'tanka-link lg' %>
    </p>
  <% end %>
  <%= paginate @users %>
</div>
