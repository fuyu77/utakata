<% @title = "「#{@keyword}」で歌人を検索" %>

<div class = "vertical serif tanka-index text-nowrap mt-4">
  <ul class="nav nav-tabs vertical-tab">
    <li class="nav-item">
      <%= link_to '短歌', posts_search_index_path(keyword: @keyword), class: 'nav-link vertical-tab text-secondary' %>
    </li>
    <% if current_user %>
      <li class="nav-item">
        <%= link_to '自分の短歌', posts_my_search_index_path(keyword: @keyword), class: 'nav-link vertical-tab text-secondary' %>
      </li>
    <% end %>
    <li class="nav-item">
      <a class="nav-link active vertical-tab">歌人</a>
    </li>
  </ul>
  <div class="mx-4">
    <%= paginate @users %>
  </div>
  <%= render 'users/users', users: @users %>
  <div class="mx-4">
    <%= paginate @users %>
  </div>
</div>
