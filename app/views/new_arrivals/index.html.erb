<div class="vertical serif tanka-index mt-3">
  <h6 class="mt5" >人気の歌｜<b>新しい歌</b>｜サイトのご案内</h6>
  <% @posts.each do |post| %>
    <p>
      <%= link_to post.tanka, post_path(id: post.id), method: :get, class: 'tanka-link' %>
      <% user = User.find(post.user_id) %>
      <%= link_to (image_tag user.avatar.url(:small), align: 'right'), posts_path(user_id: user.id), method: :get %>
    </p>
  <% end %>
  <%= paginate @posts %>
</div>
