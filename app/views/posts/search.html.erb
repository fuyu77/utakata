<% @title = '短歌検索（全体）' %>

<div class = "vertical serif tanka-index mt-3">
  <h6>
    <%= search_word(@search)%>：<b><%= all_tankas %></b>｜<!--
    --><% if user_signed_in? %><!--
    --><%= link_to '自分', tanka_search_mine_path(search: @search), method: :get, class: 'tanka-link' %>｜<!--
    --><% end %><!--
    --><%= link_to '歌人', search_users_path(search: @search), method: :get, class: 'tanka-link' %>
  </h6>
  <% @posts.each do |post| %>
    <p>
      <%= link_to post.tanka, post_path(id: post.id), method: :get, class: 'tanka-link' %>
      <% user = User.find(post.user_id) %>
      <%= link_to (image_tag user.avatar.url(:small), align: 'right'), user_path(id: user.id), method: :get %>
    </p>
  <% end %>
  <%= paginate @posts %>
</div>
