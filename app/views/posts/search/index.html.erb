<% @title = "「#{@keyword}」で短歌を検索" %>

<div class = "vertical serif tanka-index text-nowrap mt-4">
  <ul class="nav nav-tabs vertical-tab">
    <li class="nav-item">
      <a class="nav-link active vertical-tab">短歌</a>
    </li>
    <% if current_user %>
      <li class="nav-item">
        <%= link_to '自分の短歌', posts_my_search_index_path(keyword: @keyword), class: 'nav-link vertical-tab text-secondary' %>
      </li>
    <% end %>
    <li class="nav-item">
      <%= link_to '歌人', users_search_index_path(keyword: @keyword), class: 'nav-link vertical-tab text-secondary' %>
    </li>
  </ul>
  <div class="mx-4">
    <%= paginate @posts %>
  </div>
  <%= render 'posts/posts', posts: @posts, show_avatar: true %>
  <div class="mx-4">
    <%= paginate @posts %>
  </div>
</div>
