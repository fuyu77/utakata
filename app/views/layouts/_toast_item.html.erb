
<div class="toast">
  <div class="toast-header">
    <img src="https://utakata.s3.amazonaws.com/icons/favicon-32x32.png" class="rounded mr-2" alt="Utakataアイコン">
    <strong class="mr-auto">Utakata</strong>
    <% if type === 'notice' %>
      <span class="text-success">Success</span>
    <% else %>
      <span class="text-warning">Alert</span>
    <% end %>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" data-delay="1500" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <%= message %>
  </div>
</div>
