<% @posts.each do |post| %>
  <p>
    <%= link_to post.tanka.html_safe, post_path(id: post.id), method: :get, class: 'tanka-link' %>&nbsp;
    <% if user_signed_in? && current_user.id != post.user_id %>
      <%= render 'favorites/favorites', post: post, size: 'sm' %>
    <% else %>
      <i class="sm fas fa-heart"></i><!--
      --><span class="sm like"><%= post.followers_by_type_count('User') %></span>
    <% end %>
    <%= link_to (image_tag post.user.avatar.url(:small), class: 'rounded'), user_path(id: post.user_id), method: :get, class: 'd-inline-block mb-3' %>
  </p>
<% end %>
